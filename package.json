{
  "name": "stencilfy",
  "version": "0.0.1",
  "description": "Design system build on top of Stencil and Tailwind",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/stencilfy/stencilfy.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Le-lab-2-0/stencilfy"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "stencil:generate": "stencil generate",
    "stencil:build": "stencil build --docs",
    "stencil:start": "stencil build --dev --watch --serve",
    
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll",

    "storybook:build": "build-storybook -s dist",
    "storybook:start": "yarn stencil:build && yarn storybook:build && start-storybook -p 3001 -s dist",
    "dev": "concurrently --raw \"yarn storybook:start\" \"yarn stencil:start\""
  },
  "dependencies": {
    "@stencil/core": "^2.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@stencil/eslint-plugin": "^0.4.0",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/html": "^6.4.19",
    "@types/jest": "^27.0.3",
    "babel-loader": "^8.2.3",
    "concurrently": "^7.0.0",
    "jest": "^27.4.5",
    "jest-cli": "^27.4.5",
    "puppeteer": "^10.0.0",
    "stencil-tailwind-plugin": "^1.3.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.2"
  }
}
